.commonStyle {
  margin: 5px;
  width: 30px;
  height: 30px;
  border: 2px solid black;
  border-radius: 100%;
  float: left;
}

.currentColor {
  color: white;
  font-family: 'Raleway', sans-serif;
  float: right;
  position: relative;
  right: 60px;
}

.currentColorBox {
  display: inline-block;
