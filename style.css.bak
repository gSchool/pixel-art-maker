* {
  box-sizing: border-box;
}

.appStyle {
  width: 600px;
  height: 300px;
  border: 2px solid black;
  margin: auto;
  border-radius: 10px;
}

.canvasStyle {
  width: 100%;
  height: 70%;
  border-bottom: 2px solid black;
  background-color: rgba(224, 219, 219, 0.6);
  border-radius: 8px;
  border-bottom-right-radius: 0px;
  border-bottom-left-radius: 0px;
}

.paletteStyle {
  width: 100%;
  height: 30%;
  background-color: rgba(124, 74, 42, 0.3);
  border-radius: 0px;
  border-bottom-right-radius: 8px;
  border-bottom-left-radius: 8px;
}

